# AI Event Scraper - Production Environment Configuration
# Copy this file to .env and update with your actual production values

# Environment
ENVIRONMENT=production

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/event_scraper?retryWrites=true&w=majority
MONGODB_DATABASE=event_scraper
MONGODB_MAX_POOL_SIZE=100

# AI Processing
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
AI_BATCH_SIZE=20
AI_PROCESSING_ENABLED=true

# Performance Settings (Optimized for Cloud)
MAX_CONCURRENT_REQUESTS=50
REQUEST_DELAY_SECONDS=0.5
SCRAPING_TIMEOUT=30
RETRY_ATTEMPTS=3

# API Configuration
API_HOST=0.0.0.0
API_PORT=$PORT
API_TITLE="AI Event Scraper API"
API_VERSION=1.0.0
API_DESCRIPTION="A comprehensive REST API for accessing event data"

# Security
SECRET_KEY=your_production_secret_key_here
JWT_SECRET_KEY=your_production_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_BURST=20

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30

# Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_CITIES=New York,Los Angeles,Chicago,Houston,Phoenix
SCRAPING_LIMIT_PER_CITY=1000

# Data Processing
DATA_VALIDATION_ENABLED=true
DUPLICATE_DETECTION_ENABLED=true
QUALITY_THRESHOLD=0.8

# External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GEOCODING_ENABLED=true

# Production Settings
DEBUG=false
RELOAD=false
TESTING=false
