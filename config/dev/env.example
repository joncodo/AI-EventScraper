# AI Event Scraper Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=event_scraper
MONGODB_MAX_POOL_SIZE=100

# AI Processing
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
AI_BATCH_SIZE=20
AI_PROCESSING_ENABLED=true

# Performance Settings
MAX_CONCURRENT_REQUESTS=50
REQUEST_DELAY_SECONDS=0.5
SCRAPING_TIMEOUT=30
RETRY_ATTEMPTS=3

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE="AI Event Scraper API"
API_VERSION=1.0.0
API_DESCRIPTION="A comprehensive REST API for accessing event data"

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_BURST=20

# Caching
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600
CACHE_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_SCHEDULE=0 2 * * *  # Daily at 2 AM
SCRAPING_CITIES=New York,Los Angeles,Chicago,Houston,Phoenix
SCRAPING_LIMIT_PER_CITY=1000

# Data Processing
DATA_VALIDATION_ENABLED=true
DUPLICATE_DETECTION_ENABLED=true
QUALITY_THRESHOLD=0.8

# External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GEOCODING_ENABLED=true

# Development Settings
DEBUG=false
RELOAD=false
TESTING=false

# Production Settings (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# RELOAD=false
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/event_scraper?retryWrites=true&w=majority
# REDIS_URL=redis://redis:6379
# SECRET_KEY=your_production_secret_key_here
# JWT_SECRET_KEY=your_production_jwt_secret_key_here
