# AI Event Scraper Environment Variables
# Copy this file to .env and fill in your actual values

# === CORE CONFIGURATION ===
ENVIRONMENT="production"
DEBUG="false"
LOG_LEVEL="INFO"
LOG_FORMAT="json"
ENABLE_METRICS="true"
HEALTH_CHECK_INTERVAL="30"

# === API CONFIGURATION ===
API_HOST="0.0.0.0"
API_PORT="$PORT"
RELOAD="false"

# === MONGODB CONFIGURATION ===
MONGODB_URI="mongodb://mongo:YOUR_PASSWORD@trolley.proxy.rlwy.net:21533"
MONGODB_DATABASE="event_scraper"
MONGODB_MAX_POOL_SIZE="100"

# === OPENAI CONFIGURATION ===
OPENAI_API_KEY="sk-proj-YOUR_OPENAI_API_KEY_HERE"

# === EVENT PLATFORM API KEYS ===
EVENT_SCRAPER_EVENTBRITE_API_KEY="YOUR_EVENTBRITE_API_KEY_HERE"
EVENT_SCRAPER_MEETUP_API_KEY="YOUR_MEETUP_API_KEY_HERE"
EVENT_SCRAPER_FACEBOOK_API_KEY="YOUR_FACEBOOK_API_KEY_HERE"
EVENT_SCRAPER_GOOGLE_API_KEY="YOUR_GOOGLE_API_KEY_HERE"

# === SCRAPING CONFIGURATION ===
SCRAPING_ENABLED="true"
SCRAPING_CITIES="New York,Los Angeles,Chicago,Houston,Phoenix"
SCRAPING_LIMIT_PER_CITY="1000"
SCRAPING_TIMEOUT="30"
RETRY_ATTEMPTS="3"
MAX_CONCURRENT_REQUESTS="50"
REQUEST_DELAY_SECONDS="0.5"

# === DATA PROCESSING ===
AI_BATCH_SIZE="20"
DATA_VALIDATION_ENABLED="true"
DUPLICATE_DETECTION_ENABLED="true"
QUALITY_THRESHOLD="0.8"

# === WORKER CONFIGURATION ===
WORKER_LOOP_SECONDS="60"
WORKER_MAX_BACKOFF_SECONDS="300"

# === CRON CONFIGURATION ===
CRON_TOP_CITIES_LIMIT="30"
CRON_CITY_CONCURRENCY="5"
CRON_FORCE_REFRESH_EVERY_HOURS="3"

# === ENHANCED SCRAPER SETTINGS ===
EVENT_SCRAPER_MAX_CONCURRENT_SCRAPERS="10"
EVENT_SCRAPER_ENABLE_AI_PROCESSING="true"
EVENT_SCRAPER_ENABLE_DEDUPLICATION="true"
EVENT_SCRAPER_CONFIDENCE_THRESHOLD="0.8"
EVENT_SCRAPER_TIMEOUT_SECONDS="45"
EVENT_SCRAPER_MAX_RETRIES="5"
